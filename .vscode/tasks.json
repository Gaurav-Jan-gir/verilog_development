{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Verilog Automation",
            "type": "shell",
            "command": "iverilog",
            "args": [
                "-o",
                "${workspaceFolder}/vvp/${fileBasenameNoExtension}.vvp",
                "${file}",
                "${workspaceFolder}/testBench/${fileBasenameNoExtension}_tb.v"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
        ,
        {
            "label": "Render DOT to SVG",
            "type": "shell",
            "command": "dot",
            "args": [
                "-Tsvg",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.svg"
            ],
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
